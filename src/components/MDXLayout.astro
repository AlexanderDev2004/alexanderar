---
const { title, description, date, demo, source, stack } = Astro.props;
---

<article class="max-w-3xl mx-auto p-6 bg-white shadow-lg rounded-lg">
  <h1 class="text-3xl font-bold text-gray-800 mb-4">{title}</h1>
  <p class="text-gray-600 text-lg">{description}</p>

  <div class="flex flex-wrap gap-4 my-4">
    {demo && <a href={demo} class="px-4 py-2 bg-blue-500 text-white rounded-lg shadow hover:bg-blue-600">Live Demo</a>}
    {source && <a href={source} class="px-4 py-2 bg-gray-500 text-white rounded-lg shadow hover:bg-gray-600">Source Code</a>}
  </div>

  <p class="text-gray-500 text-sm">Published on: {new Date(date).toDateString()}</p>

  <div class="my-4">
    <h2 class="text-xl font-semibold text-gray-700">Tech Stack</h2>
    <ul class="list-disc ml-5 text-gray-600">
      {Array.isArray(stack) && stack.map((item) => (
        <li><a href={item.link} class="text-blue-500 hover:underline">{item.name}</a></li>
      ))}
    </ul>
  </div>

  <div class="prose lg:prose-xl mt-6">
    <slot />
  </div>
</article>
